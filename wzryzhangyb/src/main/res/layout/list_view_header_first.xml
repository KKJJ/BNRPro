<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ad_list_bg"
    android:orientation="vertical">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/roll_viewpager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:rollviewpager_hint_gravity="right"
        app:rollviewpager_hint_paddingBottom="6dp"
        app:rollviewpager_hint_paddingRight="4dp"
        app:rollviewpager_play_delay="3000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_four_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/four_1" />

        <ImageView
            android:id="@+id/img_four_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/four_2" />

        <ImageView
            android:id="@+id/img_four_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/four_3" />

        <ImageView
            android:id="@+id/img_four_4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/four_4" />

    </LinearLayout>

</LinearLayout>