<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_title_tab_find_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="@color/color_title_1"
                android:textSize="15sp"
                tools:text="视频" />

            <TextView
                android:id="@+id/tv_desc_tab_find_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="只要1元抢枪抢" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_tab_find_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_guess_share" />

    </LinearLayout>

    <View
        style="@style/divier_thin"
        android:layout_alignParentBottom="true" />

    <View
        style="@style/divier_thin2"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
