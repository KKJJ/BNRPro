<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_press_selector"
    android:orientation="vertical"
    android:paddingTop="12dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:textColor="@color/color_text_view_1"
        android:textSize="16sp"
        tools:text="荣耀王者：久违的打野貂蝉巴拉巴拉"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_item_padding"
        android:paddingLeft="12dp"
        android:paddingRight="@dimen/list_item_padding"
        android:paddingTop="@dimen/list_item_padding">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_text_view_2"
            android:textSize="14sp"
            tools:text="荣耀王者"/>

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_view_3"
            android:textSize="13sp"
            tools:text="4荣"/>

    </LinearLayout>

    <View
        style="@style/divier_thin"
        android:layout_marginTop="12dp"></View>


</LinearLayout>